{
  "name": "@repo/lib",
  "version": "0.0.0",
  "private": true,
  "files": [
    "dist/**"
  ],
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
