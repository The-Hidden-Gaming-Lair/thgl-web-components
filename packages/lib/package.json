    "test": "jest --passWithNoTests"
  },
  "jest": {
    "preset": "@repo/jest-presets/jest/node"
  },
  "devDependencies": {
    "@overwolf/types": "3.24.7",
    "@repo/eslint-config": "workspace:*",
    "@repo/jest-presets": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/jest": "29.5.12",
    "@types/node": "20.12.7",
    "tsup": "8.0.2",
    "typescript": "5.4.5"
  },
  "dependencies": {
    "clsx": "2.1.1",
    "tailwind-merge": "2.3.0",
    "zustand": "4.5.2"
