{
  "name": "diablo4-overwolf",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "tsc && bunx --bun vite build && bun run scripts/copy-overwolf.ts",
    "clean": "rm -rf dist",
    "dev": "bunx --bun vite --port 6000",
